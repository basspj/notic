{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.json",
      "useBabelrc": true
    }
  },
  "transform": {
    "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
    ".+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/scripts/jest/transform/fileTransform.js"
  },
  "modulePathIgnorePatterns": ["shared/.*/dist"],
  "moduleDirectories": ["node_modules"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "setupTestFrameworkScriptFile": "<rootDir>/node_modules/jest-enzyme/lib/index.js",
  "setupFiles": ["<rootDir>/scripts/jest/shim.ts", "<rootDir>/scripts/jest/setup.ts"],
  "testRegex": "/tests/.*.test.(ts|tsx)?$",
  "testPathIgnorePatterns": ["/node_modules/", "/shared/.*/dist", "mobile", "web"],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "collectCoverage": true,
  "coverageReporters": ["json"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/tests/", "/scripts/"],
  "coverageDirectory": "coverage/shared",
  "mapCoverage": true
}
