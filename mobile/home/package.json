{
  "name": "@mobile/home",
  "version": "0.0.1",
  "description": "Mobile - Home",
  "main": "dist/umd/index.js",
  "module": "dist/es5/index.js",
  "typings": "dist/types/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "clean-coverage": "rimraf 'coverage'",
    "clean-build": "rimraf 'build'",
    "clean-dist": "rimraf 'dist'",
    "pretest": "yarn clean-coverage",
    "test": "jest -c jest.json --no-cache",
    "prebuild": "yarn clean-build && yarn clean-dist",
    "build": "tsc -p tsconfig.dist.json",
    "doc": "typedoc --out dist/docs --target es6 --theme minimal src",
    "predist": "yarn build",
    "dist-es5": "BABEL_ENV=es5 babel build -d dist/es5",
    "dist-umd": "BABEL_ENV=umd babel build -d dist/umd --plugins transform-es2015-modules-umd",
    "dist": "yarn dist-es5 && yarn dist-umd",
    "postdist": "yarn clean-build && yarn doc",
    "prepublish": "yarn dist"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "dependencies": {
    "@mobile/themes": "0.0.1",
    "@mobile/config": "0.0.1",
    "styled-components": "3.1.6"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-cli": "6.26.0",
    "react": "16.2.0",
    "react-native": "0.53.0",
    "typescript": "2.7.2",
    "typedoc": "0.10.0",
    "jest": "22.3.0",
    "ts-jest": "22.0.4",
    "rimraf": "2.6.2"
  },
  "license": "MIT"
}
