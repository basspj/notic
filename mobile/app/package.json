{
  "name": "mobile-app",
  "version": "0.0.1",
  "description": "React Native and more",
  "scripts": {
    "clean": "rimraf $TMPDIR/react-* && yarn cache clean && watchman watch-del-all",
    "e2e-build": "detox build -c ios.sim.debug",
    "e2e-test": "detox test -c ios.sim.debug",
    "e2e": "yarn e2e-build && yarn e2e-test",
    "storybook": "storybook start -p 7007 --haul webpack.haul.storybook.js",
    "storybook-ios": "yarn storybook -- --platform ios",
    "storybook-android": "yarn storybook -- --platform android",
    "storybook-all": "yarn storybook -- --platform all",
    "storybook-reset": "yarn storybook -- --reset-cache",
    "start": "haul start --config webpack.haul.js --dev true --minify false",
    "link": "react-native link",
    "predist": "rimraf 'dist'",
    "dist": "tsc -p tsconfig.dist.json",
    "postversion": "node node_modules/react-native-version/cli.js --never-amend",
    "preandroid": "adb reverse tcp:8081 tcp:8081",
    "android": "yarn start -- --platform android",
    "android-rn": "react-native run-android",
    "android-build": "cd android && ./gradlew assembleRelease --stacktrace",
    "android-install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android-devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android-shake":
      "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "android-log": "react-native log-android",
    "android-emu": "$ANDROID_HOME/tools/emulator -avd Nexus_5X_API_26",
    "android-emu-ls": "$ANDROID_HOME/tools/emulator -list-avds",
    "clean-android": "rimraf android/app/build && rimraf android/build",
    "ios": "yarn start -- --platform ios",
    "ios-emu": "ios-sim start --devicetypeid 'iPhone-6, 11.0'",
    "ios-emu-ls": "ios-sim showdevicetypes",
    "ios-rn": "react-native run-ios",
    "ios-log": "react-native log-ios",
    "clean-ios": "rimraf ios/build",
    "clean-native": "yarn clean-android && yarn clean-ios",
    "prebundle-android": "rimraf bundle/android",
    "prebundle-ios": "rimraf bundle/ios",
    "bundle-option": "haul bundle --dev false --minify true",
    "bundle-android":
      "yarn bundle-option -- --platform android --bundle-output bundle/android/index.android.bundle.js --assets-dest bundle/android/app/src/main/res/",
    "bundle-ios":
      "yarn bundle-option -- --platform ios --bundle-output bundle/ios/main.jsbundle.js --assets-dest bundle/ios",
    "prebundle": "rimraf bundle",
    "bundle": "yarn bundle-android && yarn bundle-ios",
    "postbundle-android": "yarn obfuscate-android",
    "postbundle-ios": "yarn obfuscate-ios",
    "obfuscate-android":
      "javascript-obfuscator bundle/android/index.android.bundle.js --output bundle/android/app/src/main/assets/index.android.bundle --compact true --selfDefending true",
    "obfuscate-ios":
      "javascript-obfuscator bundle/ios/main.jsbundle.js --output bundle/ios/main.jsbundle --compact true --selfDefending true",
    "postobfuscate-android":
      "rimraf 'bundle/android/{index.android.bundle.js,index.android.bundle.js.map}'",
    "postobfuscate-ios": "rimraf 'bundle/ios/{main.jsbundle.js,main.jsbundle.js.map}'"
  },
  "dependencies": {
    "@mobile/themes": "0.0.1",
    "react": "16.2.0",
    "react-native": "0.50.4",
    "styled-components": "2.2.4",
    "haul": "1.0.0-beta.10"
  },
  "devDependencies": {
    "@storybook/react-native": "3.2.16",
    "@storybook/addon-actions": "3.2.16",
    "@storybook/addon-links": "3.2.16",
    "babel-preset-react-native": "4.0.0",
    "babel-plugin-module-resolver": "3.0.0",
    "typescript": "2.6.2",
    "typescript-styled-plugin": "0.2.1",
    "typedoc": "0.9.0",
    "react-native-typescript-transformer": "1.1.4",
    "jest": "21.2.1",
    "ts-jest": "21.2.3",
    "detox": "6.0.2",
    "babel-loader": "7.1.2",
    "awesome-typescript-loader": "3.4.0",
    "tslint-loader": "3.5.3",
    "eslint-loader": "1.9.0",
    "stylelint-custom-processor-loader": "0.4.0",
    "javascript-obfuscator": "0.12.3",
    "rimraf": "2.6.2",
    "ios-sim": "6.1.2"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "jest.e2e.json",
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build":
          "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/app-release.apk",
        "build":
          "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/notic.app",
        "build":
          "xcodebuild -project ios/notic.xcodeproj -scheme notic -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/notic.app",
        "build":
          "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/notic.xcodeproj -scheme notic -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      }
    }
  },
  "license": "MIT"
}
