{
  "name": "@mobile/app",
  "version": "0.0.1",
  "description": "React Native and more",
  "scripts": {
    "clean": "shx rm -rf $TMPDIR/react-* && yarn cache clean && watchman watch-del-all",
    "clean-coverage": "rimraf 'coverage'",
    "pretest": "yarn clean-coverage",
    "test": "jest -c jest.json --no-cache",
    "e2e-build": "detox build -c ios.sim.debug",
    "e2e-test": "detox test -c ios.sim.debug",
    "e2e": "yarn e2e-build && yarn e2e-test",
    "story": "storybook start -p 7007 --haul webpack.haul.storybook.js",
    "story-ios": "yarn story -- --platform ios",
    "story-android": "yarn story -- --platform android",
    "story-all": "yarn story -- --platform all",
    "story-reset": "yarn story -- --reset-cache",
    "start": "haul start --dev true --minify false",
    "rn-start": "react-native start -- --reset-cache",
    "rn-link": "react-native link",
    "rn-update": "react-native upgrade",
    "prern-android": "yarn preandroid",
    "rn-android": "react-native run-android",
    "rn-ios": "react-native run-ios",
    "rn-ver": "node node_modules/react-native-version/cli.js --never-amend",
    "preandroid": "adb reverse tcp:8081 tcp:8081",
    "android": "yarn start -- --platform android",
    "android-build": "cd android && ./gradlew assembleRelease --stacktrace",
    "android-build-debug": "cd android && ./gradlew assembleDebug --stacktrace",
    "android-install": "cd android ./gradlew installRelease",
    "android-devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android-shake":
      "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "android-log": "react-native log-android",
    "android-emu": "$ANDROID_HOME/tools/emulator -avd Nexus_5X_API_26",
    "android-emu-ls": "$ANDROID_HOME/tools/emulator -list-avds",
    "clean-android": "shx rm -rf android/app/build && shx rm -rf android/build",
    "ios": "yarn start -- --platform ios",
    "ios-emu": "ios-sim start --devicetypeid 'iPhone-6, 11.2'",
    "ios-emu-ls": "ios-sim showdevicetypes",
    "ios-log": "react-native log-ios",
    "clean-ios": "shx rm -rf ios/build",
    "clean-native": "yarn clean-android && yarn clean-ios",
    "prepare-android-path":
      "shx mkdir -p 'bundle/android/app/src/main/assets' 'bundle/android/app/src/main/res'",
    "prebundle-android":
      "yarn clean-android && shx rm -rf bundle/android && yarn prepare-android-path",
    "prebundle-ios": "shx rm -rf bundle/ios && yarn clean-ios",
    "bundle-option": "haul bundle --dev false --minify true",
    "bundle-android":
      "yarn bundle-option -- --platform android --bundle-output bundle/android/app/src/main/assets/index.android.bundle --assets-dest bundle/android/app/src/main/res/",
    "bundle-ios":
      "yarn bundle-option -- --platform ios --bundle-output bundle/ios/main.jsbundle --assets-dest bundle/ios",
    "bundle": "yarn bundle-android && yarn bundle-ios",
    "bundle-android-apply": "shx cp -R bundle/android .",
    "bundle-ios-apply": "shx cp -R bundle/ios .",
    "android-release": "yarn bundle-android && yarn bundle-android-apply && yarn android-build",
    "ios-release": "yarn bundle-ios && yarn bundle-ios-apply"
  },
  "dependencies": {
    "@mobile/themes": "0.0.1",
    "@mobile/config": "0.0.1",
    "@mobile/home": "0.0.1",
    "react": "16.2.0",
    "react-native": "0.59.0",
    "styled-components": "3.1.6",
    "haul": "1.0.0-beta.13"
  },
  "devDependencies": {
    "@storybook/react-native": "3.3.14",
    "typescript": "2.7.2",
    "typedoc": "0.10.0",
    "jest": "22.4.0",
    "babel-jest": "22.4.0",
    "ts-jest": "22.0.4",
    "detox": "7.1.0",
    "shx": "0.2.2",
    "ios-sim": "6.1.2"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "jest.e2e.json",
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/app-debug.apk",
        "build":
          "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/app-release.apk",
        "build":
          "pushd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_26"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/notic.app",
        "build":
          "xcodebuild -project ios/notic.xcodeproj -scheme notic -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/notic.app",
        "build":
          "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/notic.xcodeproj -scheme notic -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 6"
      }
    }
  },
  "rnpm": {
    "assets": ["./assets/fonts/"]
  },
  "license": "MIT"
}
