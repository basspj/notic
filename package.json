    "tsutils": "2.13.1",
    "ts-node": "4.0.2",
    "tsconfig-paths": "2.6.0",
    "ts-jest": "22.0.0",
    "typescript-styled-plugin": "0.2.2",
    "tslint": "5.8.0",
