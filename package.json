{
  "name": "notic",
  "private": true,
  "description": "react native app for notify with public api",
  "version": "1.0.0",
  "author": "basspj <thanapol.pj@gmail.com>",
  "bugs": {
    "url": "https://github.com/basspj/notic/issues"
  },
  "scripts": {
    "boot": "lerna bootstrap --concurrency=2",
    "format": "prettier --write {gatsby-*.js,src/**/*.{js,ts,tsx,json,css}}",
    "lint": "eslint --ext .js,.ts,.tsx src",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@types/react": "16.8.23",
    "@types/react-native": "0.60.2",
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/node": "12.0.12",
    "@typescript-eslint/eslint-plugin": "1.11.0",
    "@typescript-eslint/parser": "1.11.0",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint-config-prettier": "6.0.0",
    "gh-pages": "2.0.1",
    "husky": "3.0.0",
    "lerna": "^3.15.0",
    "lint-staged": "9.0.2",
    "prettier": "^1.18.2",
    "shx": "0.3.2",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "tsutils": "3.14.0",
    "typescript": "3.5.2"
  },
  "homepage": "https://github.com/basspj/notic/",
  "license": "MIT",
  "main": "n/a",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{gatsby-*.js,src/**/*.{js,ts,tsx,json,css}}": [
      "yarn format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  }
}
