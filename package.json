{
  "name": "notic",
  "private": true,
  "description": "react native app for notify with public api",
  "version": "1.0.0",
  "author": "basspj <thanapol.pj@gmail.com>",
  "bugs": {
    "url": "https://github.com/basspj/notic/issues"
  },
  "scripts": {
    "boot": "lerna bootstrap --concurrency=2",
    "format": "prettier --write {gatsby-*.js,src/**/*.{js,ts,tsx,json,css}}",
    "lint": "eslint --ext .js,.ts,.tsx src",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "@types/node": "11.11.3",
    "@typescript-eslint/parser": "1.4.2",
    "@typescript-eslint/eslint-plugin": "1.4.2",
    "commitizen": "3.0.4",
    "cz-conventional-changelog": "2.0.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-react": "7.11.1",
    "gh-pages": "2.0.1",
    "husky": "1.3.1",
    "lerna": "^3.13.1",
    "lint-staged": "8.1.5",
    "prettier": "^1.16.4",
    "shx": "0.3.2",
    "ts-node": "8.0.1",
    "tsconfig-paths": "3.7.0",
    "tsutils": "3.7.0",
    "typescript": "3.2.4"
  },
  "homepage": "https://github.com/basspj/notic/",
  "license": "MIT",
  "main": "n/a",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{gatsby-*.js,src/**/*.{js,ts,tsx,json,css}}": [
      "yarn format",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**"
    ]
  }
}
