{
  "presets": ["react-native"],
  "sourceMaps": "inline",
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "~": "./src",
          "~tests": "./tests",
          "~e2e": "./e2e"
        }
      }
    ]
  ],
  "env": {
    "packages": {
      "plugins": [
        [
          "module-resolver",
          {
            "root": ["."],
            "alias": {
              "~": "./packages/app/src",
              "~tests": "./packages/app/tests",
              "~e2e": "./packages/app/e2e"
            }
          }
        ]
      ]
    }
  }
}
