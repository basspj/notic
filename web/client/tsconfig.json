{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"]
    },
    "allowJs": true,
    "noImplicitAny": false,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src", "stories", "tests", "e2e", "scripts"],
  "exclude": ["node_modules"]
}
