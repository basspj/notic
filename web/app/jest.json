{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tsconfig.json",
      "useBabelrc": true
    }
  },
  "transform": {
    "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
    ".+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
    "^(?!.*\\.(js|jsx|css|json)$)": "../../scripts/jest/transform/fileTransform.js"
  },
  "modulePathIgnorePatterns": ["dist"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "setupFiles": ["../../scripts/jest/shim.ts", "../../scripts/jest/setup.ts"],
  "setupTestFrameworkScriptFile": "../../node_modules/jest-enzyme/lib/index.js",
  "testRegex": "/(tests|e2e)/.*.(test|spec).tsx?$",
  "testPathIgnorePatterns": ["/node_modules/", "/web/.*/dist", "mobile", "shared"],
  "testEnvironment": "node",
  "testURL": "http://localhost",
  "collectCoverage": true,
  "coverageReporters": ["json"],
  "coveragePathIgnorePatterns": ["/node_modules/", "/tests/", "/scripts/"],
  "coverageDirectory": "coverage"
}
